{
  "manifest_version": 3,
  "name": "SoftPhone",
  "version": "1.0",
  "description": "Хром расширение для звонков",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "./src/script.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./src/script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
